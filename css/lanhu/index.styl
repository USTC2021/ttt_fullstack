*
    margin 0
    padding 0

header 
    background url(./bg.jpg) no-repeat
    width 100%
    height 1000px
    background-size contain

.mask
    background-color #141414
    opacity: .65
    width 100%
    height 100%

.title
    text-align center
    font-size 62px
    font-family Montserrat
    font-weight 200
    color #FFFFFF
    line-height 72px
    padding-top 208px

.desc
    width 766px
    margin 86px auto 0
    font-size 20px
    font-family Montserrat
    font-weight 200
    color #FFFFFF
    line-height 32px
    opacity 0.7
    text-align center

.sign-up
    width 970px
    border 1px solid #FFFFFF
    opacity 0.2
    border-radius 2px
    margin 104px auto 0

input 
    border 1px solid #666
    outline 0
    background-color rgba(0, 0, 0, 0)
    color #fff
    padding 18px 22px
    margin-top 148px
    margin-bottom 52px

input[type="text"]
    width 292px

input[type="password"]
    width 292px
    margin-left 10px

button 
    margin-left 30px