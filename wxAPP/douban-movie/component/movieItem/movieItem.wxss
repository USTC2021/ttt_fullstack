/* component/movieItem/movieItem.wxss */
.item {
    display: inline-block;
}
.item .info {
    display: flex;
    flex-direction: column;
}
.img {
    width: 201rpx;
    height: 301rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}
.name {
    font-size: 32rpx;
    font-weight: bold;
    /* 文本不换行超出则隐藏 需要设置宽度 */
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.score-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
}