*
  margin 0
  padding 0

#toast
  display none

.movie
  width 100%
  &-head
    width 100%
    height 40px
    line-height 40px
    background-color #1e2025
    color #ffffff
    padding 0 10px
    box-sizing border-box
    display flex
    .iconfont
      width 16px
    .title
      flex 1
      text-align center
  &-info
    padding 10px
    background-color #1e2025
    &_desc    
      display flex
      width 100%
      .info-pic
        width 122px
        height 165px
        overflow hidden
        img 
          width 100%
      .info-container
        flex 1
        color #9b9da2
        font-size 12px
        margin-left 10px
        .name
          color #ffffff
          font-size 24px
          font-family Arial, sans-serif
          font-weight normal
        .type
          span 
            width 40px
            height 14px
            display inline-block
            background url('https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png') 
            background-size cover
            vertical-align middle // 拦腰对其
        .btn-wrap
          display flex
          margin-top 10px
          .flex
            flex 1 
            color #ffffff
            background-color #58585b
            height 32px
            line-height 32px
            text-align center
            border-radius 4px
            &:nth-child(2) // 选中第二个flex
              margin-left 10px
            // &:first-child // 选中第一个flex
            //   margin-right 10px
            .iconfont
              font-size 14px