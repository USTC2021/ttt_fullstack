*
  margin 0
  padding 0

#toast
  display none

.movie
  width 100%
  &-head
    width 100%
    height 40px
    line-height 40px
    background-color #1e2025
    color #ffffff
    padding 0 10px
    box-sizing border-box
    display flex
    .iconfont
      width 16px
    .title
      flex 1
      text-align center
  &-info
    padding 10px
    background-color #1e2025
    &_desc    
      display flex
      width 100%
      .info-pic
        width 122px
        height 165px
        overflow hidden
        img 
          width 100%
      .info-container
        flex 1
        color #9b9da2
        font-size 12px
        margin-left 10px
        .name
          color #ffffff
          font-size 24px
          font-family Arial, sans-serif
          font-weight normal
        .type
          span 
            width 40px
            height 14px
            display inline-block
            background url('https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png') 
            background-size cover
            vertical-align middle // 拦腰对其
        .btn-wrap
          display flex
          margin-top 10px
          .flex
            flex 1 
            color #ffffff
            background-color #58585b
            height 32px
            line-height 32px
            text-align center
            border-radius 4px
            &:nth-child(2) // 选中第二个flex
              margin-left 10px
            // &:first-child // 选中第一个flex
            //   margin-right 10px
            .iconfont
              font-size 14px
    &_rate
      background-color #16151b
      margin-top 12px
      border-radius 5px
      padding 10px
      .rate-title      
        &_left
          float left
          font-size 12px
          color #ffffff
        &_right
          font-size 12px
          float right
          font-weight normal
          color #9b9da2
      .rate-title::after
        content ''
        display block
        clear both  
      .rate-detail
        padding 10px
        display flex
        width 100%
        &_left
          width 180px
          margin-right 10px
          border 1px solid #478399
          .grade
            float left
            margin-right 5px
            h3
              color #e5a50a
              font-weight normal
              font-family Arial, sans-serif
              text-align center
              // border 1px solid #478399
            p
              color #9b9da2
              font-size 12px
          .star
            float right
            .list
              display inline-block
              text-decoration none
        &_left::after
          content ''
          display block
          clear both  
        &_right
          // border 1px solid #478399
          height 64px
          width 113px
          img 
            width 100%    