html
    color #111111
    background #ffffff

body, div, dl, dt, dd, ul, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, button, textarea, blockquote 
    margin 0
    padding 0

body
    display block
    margin 8px
    // border 1px solid #479349
    padding-top 30px

body, td, th 
    font 12px Helvetica, Arial, sans-serif
    line-height 1.62

h1
    // border 1px solid #479349
    display block
    font-size 2em
    // 文本的相对大小
    margin-block-start 0.67em
    margin-block-end 0.67em
    margin-inline-start 0px
    margin-inline-end 0px
    // border 1px solid #479349
    font-weight bold

h1, h2, h3, h4, h5, h6
    font-size 100%
    font-weight normal

h1
    word-wrap break-word // 允许长单词换行到下一行
    display block
    font-size 25px
    font-weight bold
    color #494949
    margin 0
    padding 0 0 15px 0
    line-height 1.1

a   
    cursor pointer

a:link 
    color #3377aa
    text-decoration none

a:visited
    color #666699

a:-webkit-any-link // 选择器代表一个有链接锚点的元素 超链接
    color -webkit-link
    cursor pointer
    text-decoration underline

form
    display block
    margin-top 0em
    border 0px

input
    // writing-mode 定义文本在水平或垂直方向上如何排布
    // horizontal-tb 水平方向自上而下书写方式 left-right-top-bottom
    -webkit-writing-mode horizontal-tb !important
    // text-rendering 定义浏览器渲染引擎如何渲染字体
    text-rendering auto
    color -internal-light-dark-color(black, white)
    letter-spacing normal

#anony-nav
    width 1080px
    margin 0 auto 25px
    // border 1px solid #479349
    h1
        display inline-block
        vertical-align middle
        width 160px
        height 34px
        zoom 1 // 设置或检索对象的缩放比例
        margin 0 20px 0 0
        padding 0
        font-size 12px
        font-weight normal
        background url(../img/logo.jpg) no-repeat 0 0
        background-image -webkit-image-set(url(../img/logo.jpg))   
        background-size cover 
        overflow hidden  
        a
            display block
            height 34px
            line-height 10em
            // border 2px solid #784389
    .anony-srh
        position relative
        display inline-block
        zoom 1
        vertical-align middle
        width 270px
        height 30px
        border 1px solid #c3c3c3
        .inp
            display block
            height 30px
            overflow hidden
