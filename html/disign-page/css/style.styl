    width 954px
    height 210px
    // border 1px solid #000
    text-align center

.features-head .title .title-tip
    margin-top 138px
    font-family Exo-Medium
    font-size 16px
    line-height 50px
    letter-spacing 3px
    color #ff6d6d

.features-head .title .title-name
    margin-top 5px
    font-family Exo-Medium
    font-size 40px
    line-height 50px
    letter-spacing 2px
    color #282828

